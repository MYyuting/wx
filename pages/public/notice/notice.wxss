/* pages/public/notice/notice.wxss */
.flex{
    display: flex;
}
.notive-list{
    padding: 25rpx 30rpx 40rpx;
    border-bottom: 1px solid #ccc;
}
.noti-right{
    flex-grow: 1;
    width: 70%;
    margin-left: 30rpx;
}
.notiv-til{
    font-size: 30rpx;
    background: -webkit-linear-gradient(left, #8C35FC , #1B32FE); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(right, #8C35FC, #1B32FE); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(right, #8C35FC, #1B32FE); /* Firefox 3.6 - 15 */
    background: linear-gradient(to right, #8C35FC , #1B32FE); /* 标准的语法 */
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
}
.txt{
    font-size: 24rpx;
    margin: 20rpx 0;
    line-height: 40rpx;
}
.time{
    font-size: 24rpx;
}