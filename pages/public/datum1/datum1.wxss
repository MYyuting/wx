/* pages/public/datum1/datum1.wxss */
.head-top{
    height: 192rpx;
}

.head-box{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    /* border: 1px solid #ccc; */
    margin-top: -110rpx;
    position: relative;
}
.recharge{
    position: absolute;
    right: 50rpx;
    top: 130rpx;
    color: #ff0000;
    font-size: 30rpx;
}
.autxt{
    padding: 0 15rpx;
    background: #ccc;
    border-radius: 15rpx;
    font-size: 24rpx;
    text-align: center;
    color: #666;
}
.head-img{
    margin-bottom: 20rpx;
    width: 200rpx;
    height: 200rpx;
    border: 7rpx solid #fff;
    box-shadow: 0 7rpx 20rpx #ccc;
    border-radius: 50%;
    background: #ccc;
    position: relative;
    background-size: cover;
    background-repeat: no-repeat;
}
.head-img image{
    width: 49rpx;
    height: 49rpx;
    position: absolute;
    right: 0;
    bottom: 0;
}
.head-til{
    font-size: 30rpx;
}
.head-box>view{
    margin-bottom: 10rpx;
}
.tab{
    font-size: 24rpx;
    color: #6E6E6E;
}
.company{
    font-size: 30rpx;
}
.fill-list{
    position: relative;
    border-top:10rpx solid #ccc;
    margin: 40rpx 0;
    padding: 20rpx 30rpx;

}
.authen{
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #ccc;
    padding: 10rpx 0 15rpx;
}

.authen-con>view{
    display: flex;
    align-items: center;
    padding: 40rpx 10rpx 10rpx;
}
.authen-con>view>view{
    background: #DBDBDB;
    flex-grow: 1;
    width: 50%;
    border-radius: 30rpx;
    height: 50rpx;
    overflow: hidden;
    line-height: 50rpx;
    margin-left: 20rpx;
    padding: 0 15rpx;
    color: #333;
}

