/* pages/moreActor/moreActor.wxss */
.content{
    display: flex;
    padding: 25rpx ;
    justify-content: space-between;
    flex-wrap: wrap;
}
.Actorlist{
    height: 496rpx;
    width: 328rpx;
    border-radius: 6px;
    border: 1px solid #ccc;
    position: relative;
    margin-bottom: 30rpx;
    box-shadow: 0px 5px 10px #eee;
    overflow: hidden;
}
.Actorlist>view{
    padding: 10rpx 15rpx;
    width: 100%;
    box-sizing: border-box;
    position: absolute;
    bottom: 0px;
    background: rgba(0,0,0,.4);
    color: #fff;
}
.Actorlist>image{
    width: 100%;
    height: 100%;
}
.actor-til image{
    width: 32rpx;
    height: 27rpx;
}
.actor-num,.actor-til{
    display: flex;
    justify-content: space-between;
}
.actor-num{
    font-size: 24rpx;
}