/* pages/personal/recharge/recharge.wxss */
.recharge{
    padding: 0rpx 40rpx;
}
.til{
    font-size: 30rpx;
    line-height: 90rpx;
}
.rechar-con{
    width: 100%;
    height: 405rpx;
}
.display{
    display: flex;
    justify-content: center;
}
.money1{
    align-items: flex-end;
    padding-top: 60rpx;
}
.money1 image{
    width: 79rpx;
    height: 79rpx;
    margin-right: 20rpx;
}
.money1 view{
    color: #FCFF27;
    font-size: 40rpx;
}
.input text{
    color: #fff;
    font-size: 30rpx;
}
.input input{
    width: 405rpx;
    padding: 0 10rpx;
    margin-left: 20rpx;
    border: 1px solid #ccc;
    border-radius: 20rpx;
    background: #eee;
}
.tips{
    font-size: 24rpx;
    margin-top: 50rpx;
    border-top: 1px solid #909090;
    padding: 30rpx 40rpx 40rpx;
}
.rechar-btn{
    margin: 60rpx auto 0;
    width: 200rpx;
    height: 50rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    line-height: 50rpx;
    background: -webkit-linear-gradient(left, #1B32FE , #8C35FC ); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(right, #1B32FE , #8C35FC); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(right, #1B32FE , #8C35FC); /* Firefox 3.6 - 15 */
    background: linear-gradient(to right, #1B32FE , #8C35FC); /* 标准的语法 */
    border-radius: 30rpx;
}
.place{
    font-size: 24rpx;
}