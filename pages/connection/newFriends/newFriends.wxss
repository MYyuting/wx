/* pages/connection/newFriends/newFriends.wxss */
.new-list{
    justify-content: space-between;
    padding:20rpx 30rpx;
}

.name-img{
    width: 106rpx;
    height: 106rpx;
    border: 1px solid #ccc;
    border-radius: 50%;
    position: relative;
    margin-right: 30rpx;
}
.headImg{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.name-img .img{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    bottom: 5rpx;
    right: -10rpx;
}
.flex{
    display: flex;
    align-items: center;
}
.til{
    font-size: 30rpx;
    line-height: 50rpx;
}
.new-r{
    height: 110rpx;
    flex-grow: 1;
    width: 50%;
    justify-content: space-between;
    border-bottom: 1px solid #ccc;
}
.text view{
    margin-right: 6rpx;
    font-size: 24rpx;
}

/* ------------------------------- */
.defaultText{
	color: #E3E3E3;
	font-size: 16px;
	text-align: center;
	display: block;
	margin: 20px auto 0 auto;
}
.itemBar{
	padding-left: 10px;
	height: 40px;
	border-bottom:1px solid #ccc;
}
.itemName{
	float: left;
	font-size: 16px;
	line-height: 40px;
	color: #333;
}
.agreeBtn,
.rejectBtn{
	float: right;
	margin-top: 6px;
	margin-right: 10px;
}