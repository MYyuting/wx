}
.head-img{
    width: 106rpx;
    height: 106rpx;
    border: 1rpx solid #ccc;
    border-radius: 50%;
    position: relative;
    margin-right: 30rpx;
}
.head-img .headimg{
    width: 100%;
    height: 100%;
}
