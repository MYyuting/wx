/* compents/navbar/navbar.wxss */

/* 顶部要固定定位   标题要居中   自定义按钮和标题要和右边微信原生的胶囊上下对齐 */

.nav {
    width: 100%;
    overflow: hidden;
    /* position: relative; */
    top: 0;
    left: 0;
    z-index: 1000;
    position: fixed;
}

.nav-title {
    width: 100%;
    height: 45px;
    line-height: 45px;
    text-align: center;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 10;
    font-family: PingFang-SC-Medium;
    font-size: 34rpx;
    letter-spacing: 2px;
    background: linear-gradient(to left, #1B32FE, #8C35FC);
    -webkit-background-clip: text;
    color: transparent;
}

.nav .back-pre {
    width: 22px;
    height: 22px;
    position: absolute;
    bottom: 0;
    left: 0;
    padding: 20rpx 30rpx;
}

.dian {
    width: 13rpx;
    height: 13rpx;
    background: red;
    border-radius: 50%;
    position: absolute;
    right: 30rpx;
    top: 20rpx;
}

.bg-white {
    background-color: #fff;
}

.bg-gray {
    background-color: #f7f7f7;
}

.overflow {
    overflow: auto;
}

.hidden {
    overflow: hidden;
}
