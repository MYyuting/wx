.text-input {
	width: 100%;
	height: 40px;
	padding: 0 0 10rpx;
	display: block;
}
.f-row{
    display: flex;
    align-items: center;
}
.news {
	width: 79%;
	height: 30px;
	border: 1px solid #CFCFCF;
	border-radius: 5px;
	font-size: 14px;
	padding-left: 4px;
	margin: 4px 2px 4px 6px;
}
.open_emoji image{
    width: 40rpx;
    height: 40rpx;
    margin: 0 10rpx;
}
.send_btn {
	width: 40px;
	height: 30px;
	line-height: 30px;
	font-size: 14px;
	color: #000;
	padding: 0;
	display: inline-block;
	float: right;
	margin: 4px 8px auto auto;
	background-color: #fff;
}
